<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_auto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="250sp"
        android:text="@string/text_button_auto"
        android:onClick="buttonAuto"/>

    <Button
        android:id="@+id/button_health"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="10sp"
        android:text="@string/text_button_health"
        android:onClick="buttonHealth"/>

    <Button
        android:id="@+id/button_document"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:backgroundTint="@color/teal_200"
        android:layout_marginTop="10sp"
        android:text="@string/text_button_document"
        android:onClick="buttonDocument"/>
</LinearLayout>