<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity">

    <TextView
        android:id="@+id/textHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="12pt"
        android:text="@string/text_main_health" />

    <Button
        android:id="@+id/button_add_health_doc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:backgroundTint="@color/teal_200"
        android:text="@string/text_button_add_doc"
        android:onClick="buttonAddHealthDoc"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svOne">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/list_OSAGO">
        </LinearLayout>
    </ScrollView>

</LinearLayout>